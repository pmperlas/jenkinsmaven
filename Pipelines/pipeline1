pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo 'Construyendo la Aplicaci칩n' 
            }
        }
        stage('Test') { 
            steps {
                echo 'Arranca el proceso de pruebas unitarias' 
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Desplegando al 치rea de desarrollo' 
            }
        }
    }
}

